@model ModelsMVC.Framework.Phong

@{
    ViewBag.Title = "them_phong";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center; font-weight: bold; color: #000000">THÊM PHÒNG</h2>

@using (Html.BeginForm("them_phong", "Phong", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-horizontal">

    <hr />

    <div class="form-group">
        <label>
            Mã loại phòng
        </label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.LoaiPhong_ID, null, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label>
            Chủ trọ
        </label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ChuTro_ID, null, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label>
            Diện tích
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DienTich, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DienTich, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>
            Giá
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>
            Địa chỉ
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>
            Mô tả
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>
            Số lượng
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
        </div>
    </div>
 
    <div class="form-group">
        <label class="control-label col-md-2">
            Ảnh:
        </label>
        <div class="col-md-10">
            <input type="file" name="fileUpload" placeholder="Chọn hình ảnh đại diện" />
            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
            @ViewBag.ThongBao
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input name="submit" type="submit" value="Lưu" class="btn btn-primary" />
            <input name="submit" type="submit" value="Trở về" class="btn btn-primary" />
        </div>
    </div>
</div>
}

