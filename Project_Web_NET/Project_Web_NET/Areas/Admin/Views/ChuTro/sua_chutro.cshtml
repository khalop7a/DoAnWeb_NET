@model ModelsMVC.Framework.ChuTro

@{
    ViewBag.Title = "sua_chutro";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center; font-weight: bold; color: #000000">SỬA THÔNG TIN CHỦ TRỌ</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ChuTro_ID)

    <div class="form-group">
        <label>
            Mã chủ trọ
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ChuTro_ID, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.ChuTro_ID, "", new { @class = "text-danger" })
        </div>
    </div>

  

    <div class="form-group">
        <label>
            Số điện thoại
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>
            Tên nhà trọ
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenNhaTro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNhaTro, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>
            Địa chỉ
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input  type="submit" value="Lưu" class="btn btn-primary" />
            <a href="/Admin/ChuTro/danhsach_chutro" class="btn btn-primary">Trở về</a>
        </div>
    </div>
</div>
}
