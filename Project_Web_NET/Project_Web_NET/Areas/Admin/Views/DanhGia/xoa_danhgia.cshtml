@model ModelsMVC.Framework.DanhGia

@{
    ViewBag.Title = "xoa_danhgia";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center; font-weight: bold; color: #000000">XÓA ĐÁNH GIÁ</h2>
<div>
 
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Mã đánh giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DanhGia_ID)
        </dd>

        <dt>
           Mã người đánh giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NguoiDung_ID)
        </dd>

        <dt>
            Mã phòng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phong_ID)
        </dd>

        <dt>
           Nội dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDung)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input name="submit" type="submit" value="Xóa" class="btn btn-primary" />
    <input name="submit" type="submit" value="Trở về" class="btn btn-primary" />
</div>
    }
</div>
