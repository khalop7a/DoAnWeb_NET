@model Project_Web_NET.Areas.Models.LoginChuTroModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h2 style="text-align: center; font-weight: bold; color: #000000">Đăng nhập chủ trọ</h2>
<br />
<div class="panel-body">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
    <fieldset>
        <div class="form-group">
            @Html.TextBoxFor(model => model.ChuTro_ID, new { @class = "form-control", @placeholder = "UserName", @autofocus = "autofocus" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control", @placeholder = "Password", @type = "password" })
        </div>
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(model => model.Remenberme)
                Remember Me
            </label>
        </div>
        <!-- Change this to a button or input when using this as a form -->
        <button type="submit" class="btn btn-lg btn-success btn-block">Đăng nhập</button>
        <div class="col-lg-12">
            <a href="/ChuTro/danhsach_chutro" style="text-align: center">Tạo tài khoản!</a>
        </div>
    </fieldset>
       
    }
</div>